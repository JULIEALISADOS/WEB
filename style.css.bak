        width: 100vw;
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        padding-left: 0;
        padding-right: 0;
    }

    .image-banner-wrapper {
        padding: 20px 0;
    }

    .image-banner-track {
        padding: 0 15px;
        /* Menor padding para mostrar adelanto */
        gap: 10px;
    }

    .image-card {
        max-width: 280px !important;
        /* Tamaño 'Mini' solicitado para móvil */
        min-width: 240px !important;
        height: auto !important;
        aspect-ratio: 9 / 16 !important;
        margin: 0 5px !important;
    }

    .banner-nav {
        display: none;
        /* Ocultar flechas en móvil para mayor limpieza */
    }

    .about .legibility-box {
        display: flex;
        flex-direction: column;
        /* Apilado solicitado */
        gap: 20px;
    }

    .services,
    .results {
        padding: 40px 0;
    }

    .btn-gold {
        width: 100%;
        text-align: center;
        padding: 15px 25px;
    }
}

/* Floating WhatsApp Button */
.btn-whatsapp-floating {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: var(--gold);
    color: #fff;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
    transition: all 0.3s ease;
    z-index: 2000;
    text-decoration: none;
}

.btn-whatsapp-floating:hover {
    transform: scale(1.1) translateY(-5px);
    box-shadow: 0 8px 25px rgba(255, 240, 245, 0.8);
    background-color: var(--soft-cream);
    color: var(--gold);
    border: 1px solid var(--gold);
}

.btn-whatsapp-floating svg {
    width: 35px;
    height: 35px;
    fill: currentColor;
}